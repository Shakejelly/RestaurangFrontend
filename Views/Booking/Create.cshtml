@model RestaurangFrontend.Models.Booking

<h1>Hi @ViewBag.CustomerName!</h1>
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <div class="form-group">
        <label asp-for="TableAmount"></label>
        <input asp-for="TableAmount" class="form-control" />
        <span asp-validation-for="TableAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeToArrive"></label>
        <input asp-for="TimeToArrive" type="datetime-local" class="form-control" />
        <span asp-validation-for="TimeToArrive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Boka</button>
</form>